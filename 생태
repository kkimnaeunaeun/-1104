    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>나의 일기 블로그</title>
    <style>
        body {
            font-family: 'Noto Sans KR', sans-serif;
            background-color: #fdf6e3;
            margin: 0;
            padding: 0;
        }
        header {
            background-color: #ffcc80;
            color: #333;
            padding: 20px;
            text-align: center;
            font-size: 1.8em;
            font-weight: bold;
        }
        main {
            max-width: 800px;
            margin: 20px auto;
            padding: 0 20px;
        }
        form {
            display: flex;
            flex-direction: column;
            margin-bottom: 20px;
        }
        input, textarea {
            padding: 10px;
            margin-bottom: 10px;
            font-size: 1em;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        button {
            padding: 10px;
            font-size: 1em;
            background-color: #ffb74d;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #ffa726;
        }
        .diary-entry {
            background-color: #fff3e0;
            border-left: 5px solid #ff9800;
            padding: 10px 15px;
            margin-bottom: 15px;
            border-radius: 5px;
        }
        .diary-entry h3 {
            margin: 0 0 5px 0;
        }
        .diary-entry p {
            margin: 0;
            white-space: pre-wrap;
        }
